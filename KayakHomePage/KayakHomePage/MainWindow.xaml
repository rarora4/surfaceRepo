        <Label Content="Return" HorizontalAlignment="Left" Margin="140,464,0,0" VerticalAlignment="Top" FontFamily="Segoe SemiBold" FontSize="16"/>
        <TextBox Name="returnBox" HorizontalAlignment="Left" Height="40" BorderBrush="#bababa" Margin="146,494,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="285" FontFamily="Segoe SemiBold" FontSize="22" BorderThickness="3"/>

